generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}
model FoodItem {
  id             String   @id @default(uuid())
  name           String
  expirationDate DateTime
  location       String
  usageType      UsageType
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum UsageType {
  snack
  meal_ingredient
}